@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<form class="form-signin" method="POST">
    <img class="mb-4" src="~/img/logo.png" alt="" width="150" height="50">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <label asp-for="Input.Email" class="sr-only">Email</label>
    <input type="email" id="inputEmail" class="form-control" placeholder-shown placeholder="Email" required autofocus asp-for="Input.Email" />
    <span asp-validation-for="Input.Email" class="text-danger"></span>

    <label asp-for="Input.Password" class="sr-only">Password</label>
    <input placeholder="Password" asp-for="Input.Password" class="form-control" />
    <span asp-validation-for="Input.Password" class="text-danger"></span>

    <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe">
            <input asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>

    <button class="btn btn-dark btn-block btn-sm" type="submit">Login</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
