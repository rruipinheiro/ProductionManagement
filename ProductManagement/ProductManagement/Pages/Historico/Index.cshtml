@page
@model ProductManagement.Pages.Historico.IndexModel

@{
    ViewData["Title"] = "Details";
}
<div class="pb-2 mt-4 mb-4">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <h2>Histórico</h2>
            <h6>Ordem Produção @("OP00" + ViewData["OrdemProducao"])</h6>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            <h2>
                <a asp-page="../Index" class="back_icon"><i class="far fa-arrow-alt-circle-left"></i></a>
            </h2>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Sola
                </th>
                <th>
                    Tamanho
                </th>
                <th>
                    Defeito
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Producao)
            {
                <tr ondblclick="redirect(@item.OrdemProducaoId, @item.Id)">
                    <td>@Html.DisplayFor(model => item.OrdemProducao.Sola.Nome)</td>
                    <td>@Html.DisplayFor(model => item.Tamanho)</td>
                    <td>
                        <input type="checkbox" checked="@(item.Defeito.Id > 0 ? "checked" : "")">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    function redirect(prodId, parId) {
        location.href = "/Par?prodId=" + prodId + "&parId=" + parId;
    }
</script>
