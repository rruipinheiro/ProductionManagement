@page
@model ProductManagement.Pages.Historico.IndexModel

@{
    ViewData["Title"] = "Details";
}
<div class="pb-2 mt-4 mb-4">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <h2>Histórico</h2>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            <h2>
                <a asp-page="../Index" class="back_icon"><i class="far fa-arrow-alt-circle-left"></i></a>
            </h2>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Sola
                </th>
                <th>
                    Tamanho
                </th>
                <th>
                    Defeito
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Producao.OrdemProducao.SolaId)</td>
                <td>@Html.DisplayFor(model => model.Producao.OrdemProducao.Tamanho)</td>
                <td>@Html.DisplayFor(model => model.Producao.Defeito.Nome)</td>
            </tr>
        </tbody>
    </table>
</div>
