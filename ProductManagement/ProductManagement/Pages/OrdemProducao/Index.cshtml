@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="pb-2 mt-4 mb-4">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <h2>Ordens de Produção</h2>
        </div>
        <div class="col-sm-12 col-md-6">
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Producao[0].OrdemProducao.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producao[0].OrdemProducao.Sola)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producao[0].Defeito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producao[0].Estado)
                </th>
                <th>Histórico</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Producao)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrdemProducao.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrdemProducao.Sola.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Defeito.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <a asp-area="" asp-page="/Historico/Index" asp-route-id="@item.OrdemProducaoId">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
